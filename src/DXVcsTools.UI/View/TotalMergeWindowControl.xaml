<UserControl 
    x:Class="DXVcsTools.UI.View.TotalMergeWindowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="clr-namespace:DXVcsTools.UI" 
    xmlns:view="clr-namespace:DXVcsTools.UI.View"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
    dx:ThemeManager.ThemeName="Office2013">
    <Grid>
        <dxb:BarManager>
            <dxb:BarManager.Items>
                <dxb:BarButtonItem 
                    x:Name="bUpdate" 
                    Glyph="pack://application:,,,/DXVcsTools.UI;component/Images/IndentIncrease_16x16.png" 
                    Command="{Binding UpdateCommand}"                    
                    Hint="Update">
                </dxb:BarButtonItem>
                <dxb:BarButtonItem 
                    x:Name="bMerge" 
                    Glyph="pack://application:,,,/DXVcsTools.UI;component/Images/IndentIncrease_16x16.png" 
                    Command="{Binding MergeCommand}"                    
                    Hint="Merge current item">
                </dxb:BarButtonItem>
                <dxb:BarButtonItem 
                    x:Name="bMergeAll" 
                    Glyph="pack://application:,,,/DXVcsTools.UI;component/Images/IndentIncrease_16x16.png" 
                    Command="{Binding MergeAllCommand}"                    
                    Hint="Merge all items">
                </dxb:BarButtonItem>
                <dxb:BarEditItem 
                    x:Name="bCurrentBranch" 
                    EditValue="{Binding Path=CurrentBranch}"
                    EditWidth="150" 
                    Content="Port to:">
                    <dxb:BarEditItem.EditSettings>
                        <dxe:ComboBoxEditSettings 
                            ItemsSource="{Binding Path=AvailableBranches}"
                            IsTextEditable="False"
                            DisplayMember="Name">
                        </dxe:ComboBoxEditSettings>
                    </dxb:BarEditItem.EditSettings>
                </dxb:BarEditItem>
            </dxb:BarManager.Items>
            <dxb:BarManager.Bars>
                <dxb:Bar IsMainMenu="True">
                    <dxb:BarButtonItemLink BarItemName="bUpdate" />
                    <dxb:BarButtonItemLink BarItemName="bMerge" />
                    <dxb:BarButtonItemLink BarItemName="bMergeAll" />
                    <dxb:BarEditItemLink BarItemName="bCurrentBranch"/>
                </dxb:Bar>
            </dxb:BarManager.Bars>
            <view:FlatUIControl/>
        </dxb:BarManager>
    </Grid>
</UserControl>
